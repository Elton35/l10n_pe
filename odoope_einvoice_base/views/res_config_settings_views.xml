<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="res_config_settings_view_form" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit.einvoice</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="account.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@id='invoicing_settings']" position="after">
                <h2>Electronic Invoicing (PE)</h2>
                <div class="row mt16 o_settings_container" id="einvoice_settings">
                    <div class="col-12 col-lg-6 o_setting_box">
                        <div class="o_setting_left_pane">
                            <field name="module_odoope_einvoice_ose" widget="upgrade_boolean"/>
                        </div>
                        <div class="o_setting_right_pane">
                            <label string="OSE connection for electronic invoices" for="module_odoope_einvoice_ose"/>
                            <div class="text-muted">
                                Send your electronic invoices by OSE
                            </div>
                            <div class="content-group" attrs="{'invisible': [('module_odoope_einvoice_ose','=',False)]}" id="msg_module_odoope_einvoice_ose">
                                <div class="text-warning mt16"><strong>Save</strong> this page and come back here to set up the feature.</div>
                            </div>
                            <div id="msg_einvoice_ose" class="content-group" attrs="{'invisible': [('module_odoope_einvoice_ose', '=', False)]}">
                                <div class="text-warning mt16 mb4">
                                    Save this page and come back here to set up the feature.
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>
</odoo>
